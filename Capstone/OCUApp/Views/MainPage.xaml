<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OCU_app.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="0,0"
            VerticalOptions="Center"
            >

            <Label
                Text="Oklahoma City"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Image
                Source="ocubackground.png"
                SemanticProperties.Description="OCU Star logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="University"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Oklahoma CIty University's Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
